<h1>New ad</h1>
<%= form_for(@ad, :url => {:action => 'create'}) do |f| %>  
  <p>
    <b>Name</b></br><%= f.text_field :name %></p>
  <p>
    <b>Desc</b></br><%= f.text_area :desc %></p>
  <p
     ><b>Price</b></br><%= f.text_field :price %></p>
  <p>
    <b>Seller</b></br><%= f.text_field :seller_id %></p>
  <p
     ><b>Email</b></br><%= f.text_field :email %></p>
  <p>
    <b>Img Url</b></br><%= f.text_field :img_url %></p>
  <p><%= f.submit "create" %></p>
<% end %>
